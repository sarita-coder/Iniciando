mixin img-100-jpg(image)
	img.w-100(src="img/"+image+".jpg")

mixin img-100-png(image)
	img.w-100(src="img/"+image+".png")

mixin portafolio(image,texto)
	.col-sm-4
		.portafolio
			.pantalla
				+img-100-png(image)
				.btn-star
				.parante
				.base
			a(href="")
				.informacion.w-100
					h1=(texto)
			
mixin title(texto)
	.title
		h1=(texto)

mixin colSobreMi(image)
	.col-sm-4
		.portafolio
			.pantalla
				+img-100-png(image)

mixin habilidades(texto)
	.col-sm-3
		.cont-habi.text-center
			.cuello
			.tubo
			.cont
		p=texto


