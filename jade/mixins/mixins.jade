mixin img-100-jpg(image)
	img.w-100(src="img/"+image+".jpg")

mixin img-100-png(image)
	img.w-100(src="img/"+image+".png")

mixin portafolio(name,h,texto,texto1,texto2,texto3,texto4,texto5)
	.col-sm-8.col-sm-offset-2
		if (h==1)
			.row
				.col-sm-6.col-xs-12
					.portafolio
						.banner2(class=name)
				.col-sm-6.col-xs-12
					.texto
						h2 Flatness
						p Flecha:
							span=texto
						p Retos:
							span=texto1	
		else 
			.row
				.col-sm-6.col-xs-12
					.texto
						h2 Flatness
						p Flecha:
							span=texto
						p Retos:
							span=texto1	
				.col-sm-6.col-xs-12
					.portafolio
						.banner2(class=name)

					
			
mixin title(texto)
	.title
		h1=(texto)

mixin colSobreMi(image)
	.col-sm-4
		.portafolio
			.pantalla
				+img-100-png(image)

mixin habilidades(texto,name)
	.col-sm-3.col-xs-12
		.cont-habi.text-center
			.cuello
			.tubo(class=name)
			
		p=texto

mixin habilidad(p,texto)
	.col-sm-3.col-xs-6
		.especialidad
			a(href="")
				div(id="p")
			p=texto


